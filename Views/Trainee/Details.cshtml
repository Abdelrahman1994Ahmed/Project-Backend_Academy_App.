@model Academy.ViewModels.TraineeViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Trainee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgURL" class="control-label"></label>
                <input asp-for="ImgURL" class="form-control" />
                <span asp-validation-for="ImgURL" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.ImgURL))
                {
                    <img src="@Model.ImgURL" class="img-thumbnail" width="100" height="75" />
                }
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepId" class="control-label"></label>
                <select class="form form-control" asp-for="DepId">
                    @foreach (var item in Model.Departments)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>
            </div>

            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select class="form form-control" asp-for="CourseId">
                    @foreach (var item in Model.Courses)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }

                </select>
            </div>
            <br>
@*             <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
 *@        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
